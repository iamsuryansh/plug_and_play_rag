# Plug-and-Play RAG Environment Variables
# Copy this file to .env and fill in your values

# =================
# LLM API Keys
# =================

# Gemini API Key (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# =================
# Database Configuration
# =================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ragdb
DB_USER=raguser
DB_PASSWORD=ragpass

# MongoDB Database
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=ragdb
MONGO_USER=raguser
MONGO_PASSWORD=ragpass

# =================
# Application Configuration
# =================

# Configuration file path (inside container)
CONFIG_PATH=/app/config/app_config.yaml

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# =================
# Optional: Custom LLM Endpoints
# =================

# Ollama (local LLM server)
OLLAMA_BASE_URL=http://localhost:11434

# LM Studio (local LLM server)  
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# Custom LLM endpoint
CUSTOM_LLM_URL=http://your-custom-llm-server.com/api/v1
CUSTOM_LLM_API_KEY=your_custom_api_key_here

# =================
# Docker Compose Profiles
# =================

# Uncomment to enable databases with docker-compose
# COMPOSE_PROFILES=with-db
